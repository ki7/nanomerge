{
  "name": "nanomerge",
  "version": "0.2.0-0",
  "description": "Tiny universal isomorphic library for intellectual deep merging objects",
  "keywords": [],
  "author": "Nikolay Govorov <nikolay_govorov@bk.ru>",
  "license": "MIT",
  "repository": "nikolay-govorov/nanomerge",
  "dependencies": {
    "nanoclone": "^0.1.5"
  },
  "devDependencies": {
    "benchmark": "^2.1.4",
    "chalk": "^2.3.2",
    "deepmerge": "^2.1.0",
    "docdash": "^0.4.0",
    "eslint": "^4.19.1",
    "eslint-config-logux": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-es5": "^1.2.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.2.1",
    "jsdoc": "^3.5.5",
    "lint-staged": "^6.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "size-limit": "^0.13.2",
    "yaspeller-ci": "^1.0.0"
  },
  "scripts": {
    "benchmark": "node ./benchmark.js",
    "lint-staged": "lint-staged",
    "spellcheck": "npm run docs && yaspeller-ci *.md docs/*.html",
    "clean": "rimraf docs/ coverage/",
    "docs": "jsdoc --configure .jsdocrc *.js",
    "lint": "eslint *.js test/*.js",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --coverage && npm run lint && size-limit && npm run spellcheck"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-logux/browser",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "800 B"
    }
  ],
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
